{
  "name": "webapp",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "build": "npm run build:css && tsc && copyfiles -u 1 src/infrastructure/www/views/* dist/",
    "build:css": "npx tailwindcss -i ./src/infrastructure/www/styles/input.css -o ./public/styles.css",
    "css:watch": "npx tailwindcss -i ./src/infrastructure/www/styles/input.css -o ./public/styles.css --watch",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migration:create": "npm run typeorm migration:create ./src/infrastructure/database/migrations/$npm_config_name",
    "migration:run": "ts-node node_modules/typeorm/cli.js migration:run -d ./dist/infrastructure/database/datasource.js",
    "migration:down": "npm run typeorm migration:revert -- -d ./src/infrastructure/database/datasource.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@google/genai": "^1.21.0",
    "@libsql/client": "^0.15.15",
    "body-parser": "^2.2.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typeorm-cli": "^1.0.7",
    "typeorm-extension": "^3.7.1",
    "typescript": "^5.9.2"
  }
}
