{
  "compilerOptions": {
    /* Módulos */
    "target": "es6", // Ou 'ES2018' ou superior, compatível com as versões recentes do Node.js
    "module": "CommonJS", // Padrão de módulos do Node.js (ou 'ESNext' se usar "type": "module" no package.json)
    "rootDir": "./src", // Localização dos arquivos TypeScript
    "outDir": "./dist", // Onde os arquivos JavaScript compilados serão salvos (crucial para o Vercel)
    "esModuleInterop": true, // Permite importações de CommonJS como se fossem ES Modules
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,

    /* Configurações Adicionais */
    "strict": true, // Ativa todas as verificações rigorosas de tipo
    "skipLibCheck": true, // Pula a verificação de tipo dos arquivos de definição de biblioteca
    "resolveJsonModule": true, // Permite importar arquivos .json
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*" // Inclui todos os arquivos TypeScript em src
  ]
}
